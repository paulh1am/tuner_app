<h1>Mix-Tapir</h1>
<%= image_tag "tapir.png" %>

<form action="/songs/search" method="get">
  
  <input type="text" name="search_term" >
  <input type="submit">
</form>

<% @songs.each do |song| %>

  <div>
    <img src="<%= song.artwork_url %>" alt="">

  <h3> 
  <%= song.title %>
  </h3>
  <audio controls src="<%= song.preview_link %>"></audio>
  <form action="/songs/<%= song.id %>" method='post'>
    <%= token_tag %>
    <input type="hidden" name="_method" value="delete">
    <button type="submit">
      DELETE
    </button> 
  </form>
  </div>
  <% end %>